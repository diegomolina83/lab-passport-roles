        <option value="GUEST">GUEST</option> 
     </select> --}}
     <br>

     {{#if message}}
    <p style="color: red">{{ message }}</p>
    {{/if}}
    
    <button type="submit" class="btn btn-primary">Modificar Course</button>
  </form>