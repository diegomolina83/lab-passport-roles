<div class="loginForm">
  <form action="/courses/{{_id}}" method="POST" class="px-4 py-3">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="exampleDropdownFormEmail1" name="title" placeholder="Title" value={{title}}>
    </div>
    <div class="form-group">
      <label for="leadTeacher">Lead Teacher</label>
      <input type="text" class="form-control" id="exampleDropdownFormEmail1" name="leadTeacher" placeholder="Lead Teacher" value={{leadTeacher}}>
    </div>
     <div class="form-group">
      <label for="startDate">Start Date</label>
      <input type="date" class="form-control" name ="startDate" id="exampleDropdownFormPassword1" placeholder="Start Date" value={{startDate}}>
    </div>
    <div class="form-group">
      <label for="startDate">End Date</label>
      <input type="date" class="form-control" name ="endDate" id="exampleDropdownFormPassword1" placeholder="endDate" value={{endDate}}>
    </div>
    
    <div class="form-group">
      <label for="ta">Teacher Assistant</label>
      <input type="text" class="form-control" id="exampleDropdownFormEmail1" name="ta" placeholder="Teacher Assistant" value={{ta}}>
    </div>
    <div class="form-group">
      <label for="courseImg">Course Image</label>
      <input type="file" class="form-control" id="exampleDropdownFormEmail1" name="courseImg" placeholder="Course Image" value={{courseImg}}>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="exampleDropdownFormEmail1" name="description" placeholder="Description" value={{description}}>
    </div>
    <div class="form-group">
      <label for="status">Status</label>
      <select name="status" value={{status}}>
        <option value="ON">ON</option> 
        <option value="OFF">OFF</option> 
       
     </select>
     
    <div class="form-group">
      <label for="students">Students</label>
      <input type="text" class="form-control" id="exampleDropdownFormEmail1" name="students" placeholder="Students" value={{students}}>
    </div>
