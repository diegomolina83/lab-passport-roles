<h2>Login</h2>




<div class="loginForm">
  <form action="/login" method="POST" class="px-4 py-3">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" class="form-control" id="exampleDropdownFormEmail1" name="username" placeholder="User Name">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name ="password" id="exampleDropdownFormPassword1" placeholder="Password">
    </div>
    {{#if message}}
    <p style="color: red">{{ message }}</p>
    {{/if}}
    
    <button type="submit" class="btn btn-primary">Log in</button>
  </form>
  
 

</div>